# AI API Integrator - Development Environment Configuration

# Application
NODE_ENV=development
PORT=3001
FRONTEND_URL=http://localhost:3000
API_URL=http://localhost:3001

# Database Configuration
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=ai_api_integrator_dev
DATABASE_USERNAME=postgres
DATABASE_PASSWORD=postgres
DATABASE_SSL=false
DATABASE_POOL_SIZE=10

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_TTL=3600

# NATS Configuration
NATS_URL=nats://localhost:4222
NATS_USER=
NATS_PASSWORD=

# JWT Configuration
JWT_SECRET=your-development-jwt-secret-key-at-least-32-characters
JWT_EXPIRES_IN=15m
JWT_REFRESH_SECRET=your-development-refresh-secret-key-at-least-32-characters
JWT_REFRESH_EXPIRES_IN=7d

# OAuth Configuration - Google (optional for development)
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_CALLBACK_URL=http://localhost:3001/auth/google/callback

# OAuth Configuration - GitHub (optional for development)
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret
GITHUB_CALLBACK_URL=http://localhost:3001/auth/github/callback

# S3/Object Storage Configuration (use MinIO for local development)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=minioadmin
AWS_SECRET_ACCESS_KEY=minioadmin
S3_BUCKET_NAME=ai-api-integrator-dev
S3_ENDPOINT=http://localhost:9000

# Email Configuration (use MailHog for local development)
SMTP_HOST=localhost
SMTP_PORT=1025
SMTP_SECURE=false
SMTP_USER=
SMTP_PASSWORD=
FROM_EMAIL=dev@localhost
FROM_NAME=AI API Integrator Dev

# Temporal Configuration (optional for development)
TEMPORAL_NAMESPACE=default
TEMPORAL_SERVER_URL=localhost:7233
TEMPORAL_TASK_QUEUE=flow-execution

# HashiCorp Vault Configuration (optional for development)
VAULT_URL=http://localhost:8200
VAULT_TOKEN=dev-token
VAULT_SECRET_PATH=secret/ai-api-integrator

# OpenAI/AI Configuration
OPENAI_API_KEY=your-openai-api-key
OPENAI_MODEL=gpt-3.5-turbo
OPENAI_MAX_TOKENS=2000
OPENAI_TEMPERATURE=0.1

# Embedding Service Configuration
EMBEDDING_SERVICE=openai
EMBEDDING_MODEL=text-embedding-ada-002
EMBEDDING_DIMENSIONS=1536

# Monitoring & Observability (optional for development)
SENTRY_DSN=
SENTRY_ENVIRONMENT=development

# OpenTelemetry Configuration (optional for development)
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4317
OTEL_SERVICE_NAME=ai-api-integrator-dev
OTEL_SERVICE_VERSION=dev

# Prometheus Configuration
PROMETHEUS_METRICS_ENABLED=true
PROMETHEUS_METRICS_PORT=9090
PROMETHEUS_METRICS_PATH=/metrics

# Rate Limiting (more lenient for development)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=1000
RATE_LIMIT_SKIP_SUCCESSFUL_REQUESTS=true

# Security (more lenient for development)
CORS_ORIGIN=http://localhost:3000
CORS_CREDENTIALS=true
HELMET_ENABLED=false
CSRF_PROTECTION_ENABLED=false

# File Upload Limits
MAX_FILE_SIZE=50MB
MAX_FILES_PER_REQUEST=10
ALLOWED_FILE_TYPES=json,yaml,yml,md,txt,pdf

# Performance & Scaling
CLUSTER_MODE=false
GRACEFUL_SHUTDOWN_TIMEOUT=10000
KEEP_ALIVE_TIMEOUT=65000

# Logging
LOG_LEVEL=debug
LOG_FORMAT=pretty
LOG_FILE_ENABLED=false

# Health Checks
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_PATH=/health
HEALTH_CHECK_TIMEOUT=5000

# Feature Flags
FEATURE_RAG_INFERENCE=true
FEATURE_TEMPORAL_WORKFLOWS=true
FEATURE_OAUTH_PROVIDERS=true
FEATURE_MAGIC_LINKS=true
FEATURE_PARTNER_SHARING=true
FEATURE_ADVANCED_PAGINATION=true
FEATURE_ADVANCED_AUTH=true
FEATURE_LARGE_SPEC_OPTIMIZATION=true

# Development/Debug
DEBUG_MODE=true
SWAGGER_ENABLED=true
GRAPHQL_PLAYGROUND_ENABLED=true
QUERY_LOGGING_ENABLED=true

# Webhook Configuration
WEBHOOK_SECRET=dev-webhook-secret
WEBHOOK_TIMEOUT=30000
WEBHOOK_RETRY_ATTEMPTS=3
WEBHOOK_RETRY_DELAY=1000