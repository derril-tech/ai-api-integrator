# AI API Integrator - Production Environment Configuration

# Application
NODE_ENV=production
PORT=3001
FRONTEND_URL=https://your-domain.com
API_URL=https://api.your-domain.com

# Database Configuration
DATABASE_HOST=your-postgres-host
DATABASE_PORT=5432
DATABASE_NAME=ai_api_integrator
DATABASE_USERNAME=your-db-user
DATABASE_PASSWORD=your-db-password
DATABASE_SSL=true
DATABASE_POOL_SIZE=20

# Redis Configuration
REDIS_HOST=your-redis-host
REDIS_PORT=6379
REDIS_PASSWORD=your-redis-password
REDIS_DB=0
REDIS_TTL=3600

# NATS Configuration
NATS_URL=nats://your-nats-host:4222
NATS_USER=your-nats-user
NATS_PASSWORD=your-nats-password

# JWT Configuration
JWT_SECRET=your-super-secure-jwt-secret-key-at-least-32-characters
JWT_EXPIRES_IN=15m
JWT_REFRESH_SECRET=your-super-secure-refresh-secret-key-at-least-32-characters
JWT_REFRESH_EXPIRES_IN=7d

# OAuth Configuration - Google
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_CALLBACK_URL=https://api.your-domain.com/auth/google/callback

# OAuth Configuration - GitHub
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret
GITHUB_CALLBACK_URL=https://api.your-domain.com/auth/github/callback

# OAuth Configuration - Microsoft (optional)
MICROSOFT_CLIENT_ID=your-microsoft-client-id
MICROSOFT_CLIENT_SECRET=your-microsoft-client-secret
MICROSOFT_CALLBACK_URL=https://api.your-domain.com/auth/microsoft/callback

# S3/Object Storage Configuration
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
S3_BUCKET_NAME=ai-api-integrator-storage
S3_ENDPOINT=https://s3.amazonaws.com
# For Cloudflare R2 or other S3-compatible services:
# S3_ENDPOINT=https://your-account-id.r2.cloudflarestorage.com

# Email Configuration (for magic links, notifications)
SMTP_HOST=smtp.your-email-provider.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-smtp-username
SMTP_PASSWORD=your-smtp-password
FROM_EMAIL=noreply@your-domain.com
FROM_NAME=AI API Integrator

# Temporal Configuration
TEMPORAL_NAMESPACE=ai-api-integrator
TEMPORAL_SERVER_URL=your-temporal-server:7233
TEMPORAL_CLIENT_CERT_PATH=/path/to/client.pem
TEMPORAL_CLIENT_KEY_PATH=/path/to/client.key
TEMPORAL_SERVER_ROOT_CA_CERT_PATH=/path/to/ca.pem
TEMPORAL_TASK_QUEUE=flow-execution

# HashiCorp Vault Configuration
VAULT_URL=https://your-vault-instance:8200
VAULT_TOKEN=your-vault-token
VAULT_NAMESPACE=your-vault-namespace
VAULT_SECRET_PATH=secret/ai-api-integrator

# OpenAI/AI Configuration
OPENAI_API_KEY=your-openai-api-key
OPENAI_MODEL=gpt-4
OPENAI_MAX_TOKENS=4000
OPENAI_TEMPERATURE=0.1

# Embedding Service Configuration
EMBEDDING_SERVICE=openai
EMBEDDING_MODEL=text-embedding-ada-002
EMBEDDING_DIMENSIONS=1536

# Monitoring & Observability
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
SENTRY_ENVIRONMENT=production
SENTRY_RELEASE=1.0.0

# OpenTelemetry Configuration
OTEL_EXPORTER_OTLP_ENDPOINT=https://your-otel-collector:4317
OTEL_SERVICE_NAME=ai-api-integrator
OTEL_SERVICE_VERSION=1.0.0
OTEL_RESOURCE_ATTRIBUTES=service.name=ai-api-integrator,service.version=1.0.0

# Prometheus Configuration
PROMETHEUS_METRICS_ENABLED=true
PROMETHEUS_METRICS_PORT=9090
PROMETHEUS_METRICS_PATH=/metrics

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_SKIP_SUCCESSFUL_REQUESTS=false

# Security
CORS_ORIGIN=https://your-domain.com
CORS_CREDENTIALS=true
HELMET_ENABLED=true
CSRF_PROTECTION_ENABLED=true

# File Upload Limits
MAX_FILE_SIZE=50MB
MAX_FILES_PER_REQUEST=10
ALLOWED_FILE_TYPES=json,yaml,yml,md,txt,pdf

# Performance & Scaling
CLUSTER_MODE=true
CLUSTER_WORKERS=auto
GRACEFUL_SHUTDOWN_TIMEOUT=30000
KEEP_ALIVE_TIMEOUT=65000

# Logging
LOG_LEVEL=info
LOG_FORMAT=json
LOG_FILE_ENABLED=true
LOG_FILE_PATH=/var/log/ai-api-integrator/app.log
LOG_FILE_MAX_SIZE=10MB
LOG_FILE_MAX_FILES=5

# Health Checks
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_PATH=/health
HEALTH_CHECK_TIMEOUT=5000

# Feature Flags
FEATURE_RAG_INFERENCE=true
FEATURE_TEMPORAL_WORKFLOWS=true
FEATURE_OAUTH_PROVIDERS=true
FEATURE_MAGIC_LINKS=true
FEATURE_PARTNER_SHARING=true
FEATURE_ADVANCED_PAGINATION=true
FEATURE_ADVANCED_AUTH=true
FEATURE_LARGE_SPEC_OPTIMIZATION=true

# Development/Debug (set to false in production)
DEBUG_MODE=false
SWAGGER_ENABLED=false
GRAPHQL_PLAYGROUND_ENABLED=false
QUERY_LOGGING_ENABLED=false

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=ai-api-integrator-backups

# SSL/TLS Configuration
SSL_ENABLED=true
SSL_CERT_PATH=/path/to/ssl/cert.pem
SSL_KEY_PATH=/path/to/ssl/key.pem
SSL_CA_PATH=/path/to/ssl/ca.pem

# CDN Configuration (optional)
CDN_URL=https://cdn.your-domain.com
CDN_ENABLED=true

# Analytics (optional)
ANALYTICS_ENABLED=true
ANALYTICS_PROVIDER=mixpanel
ANALYTICS_API_KEY=your-analytics-api-key

# Webhook Configuration
WEBHOOK_SECRET=your-webhook-secret-for-signature-validation
WEBHOOK_TIMEOUT=30000
WEBHOOK_RETRY_ATTEMPTS=3
WEBHOOK_RETRY_DELAY=1000
